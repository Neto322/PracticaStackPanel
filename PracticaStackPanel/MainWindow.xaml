<Window x:Class="PracticaStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaStackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<StackPanel Orientation="Vertical">
		<Button VerticalAlignment="Stretch">Boton uno</Button>
		<Button VerticalAlignment="Top">Boton dos</Button>
		<Button VerticalAlignment="Center">Boton tres</Button>
		<Button VerticalAlignment="Bottom">Boton cuatro</Button>
		<Button HorizontalAlignment="Stretch">Boton cinco</Button>
		<Button HorizontalAlignment="Left">Boton seis</Button>
		<Button HorizontalAlignment="Center">Boton siete</Button>
		<Button  HorizontalAlignment="Right">Boton ocho</Button>
		<Button Width="250">Interesante mi estimado</Button>
		<Button Background="Aqua">Ven amigo te invito una copa</Button>
		<Button  Language="English">Ya no tomo gracias</Button>
		<Button>No tomas entonces te invito un cafe</Button>
		<Button>Buenoo</Button>
	</StackPanel>
</Window>
